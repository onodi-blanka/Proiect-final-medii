@page
@model Proiect.Pages.Appointments.EditModel

<h2>Edit Appointment</h2>

<form method="post">
    <input type="hidden" asp-for="Appointment.ID" />
    <div class="form-group">
        <label asp-for="Appointment.DateTime" class="control-label"></label>
        <input asp-for="Appointment.DateTime" type="datetime-local" class="form-control" />
        <span asp-validation-for="Appointment.DateTime" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Appointment.ReasonOfVisit" class="control-label"></label>
        <input asp-for="Appointment.ReasonOfVisit" class="form-control" />
        <span asp-validation-for="Appointment.ReasonOfVisit" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Appointment.PetID" class="control-label"></label>
        <select asp-for="Appointment.PetID" class="form-control" asp-items="Model.Pets">
            <option value="">-- Select Pet --</option>
        </select>
        <span asp-validation-for="Appointment.PetID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Appointment.DoctorID" class="control-label"></label>
        <select asp-for="Appointment.DoctorID" class="form-control" asp-items="Model.Doctors">
            <option value="">-- Select Doctor --</option>
        </select>
        <span asp-validation-for="Appointment.DoctorID" class="text-danger"></span>
    </div>
    <input type="submit" value="Save" class="btn btn-primary" />
</form>

<a asp-page="./Index">Back to List</a>
