@page
@model Proiect.Pages.Treatments.EditModel

<h2>Edit Treatment</h2>

<form method="post">
    <input type="hidden" asp-for="Treatment.ID" />
    <div class="form-group">
        <label asp-for="Treatment.Diagnosis" class="control-label"></label>
        <input asp-for="Treatment.Diagnosis" class="form-control" />
        <span asp-validation-for="Treatment.Diagnosis" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Treatment.Prescription" class="control-label"></label>
        <input asp-for="Treatment.Prescription" class="form-control" />
        <span asp-validation-for="Treatment.Prescription" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Treatment.Notes" class="control-label"></label>
        <textarea asp-for="Treatment.Notes" class="form-control"></textarea>
        <span asp-validation-for="Treatment.Notes" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Treatment.AppointmentID" class="control-label"></label>
        <select asp-for="Treatment.AppointmentID" class="form-control" asp-items="Model.Appointments">
            <option value="">-- Select Appointment --</option>
        </select>
        <span asp-validation-for="Treatment.AppointmentID" class="text-danger"></span>
    </div>
    <input type="submit" value="Save" class="btn btn-primary" />
</form>

<a asp-page="./Index">Back to List</a>

