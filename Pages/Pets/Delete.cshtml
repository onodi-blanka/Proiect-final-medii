@page
@model Proiect.Pages.Pets.DeleteModel

<h2>Delete Pet</h2>

<form method="post">
    <input type="hidden" asp-for="Pet.ID" />
    <div>
        <h4>Are you sure you want to delete this pet?</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Name
            </dt>
            <dd class="col-sm-10">
                @Model.Pet.Name
            </dd>
            <dt class="col-sm-2">
                Species
            </dt>
            <dd class="col-sm-10">
                @Model.Pet.Species
            </dd>
            <dt class="col-sm-2">
                Breed
            </dt>
            <dd class="col-sm-10">
                @Model.Pet.Breed
            </dd>
            <dt class="col-sm-2">
                Date of Birth
            </dt>
            <dd class="col-sm-10">
                @Model.Pet.DateOfBirth.ToString("yyyy-MM-dd")
            </dd>
            <dt class="col-sm-2">
                Gender
            </dt>
            <dd class="col-sm-10">
                @Model.Pet.Gender
            </dd>
            <dt class="col-sm-2">
                Owner
            </dt>
            <dd class="col-sm-10">
                @Model.Pet.Owner?.FirstName @Model.Pet.Owner?.LastName
            </dd>
        </dl>
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </div>
</form>
