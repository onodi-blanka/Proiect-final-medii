@page
@model Proiect.Pages.Pets.EditModel

<h2>Edit Pet</h2>

<form method="post">
    <input type="hidden" asp-for="Pet.ID" />
    
    <div class="form-group">
        <label asp-for="Pet.Name" class="control-label"></label>
        <input asp-for="Pet.Name" class="form-control" />
        <span asp-validation-for="Pet.Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Pet.Species" class="control-label"></label>
        <input asp-for="Pet.Species" class="form-control" />
        <span asp-validation-for="Pet.Species" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Pet.Breed" class="control-label"></label>
        <input asp-for="Pet.Breed" class="form-control" />
        <span asp-validation-for="Pet.Breed" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Pet.DateOfBirth" class="control-label"></label>
        <input asp-for="Pet.DateOfBirth" type="date" class="form-control" />
        <span asp-validation-for="Pet.DateOfBirth" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Pet.Gender" class="control-label"></label>
        <select asp-for="Pet.Gender" class="form-control">
            <option value="">-- Select Gender --</option>
            <option value="Male" selected="@(Model.Pet.Gender == "Male" ? "selected" : "")">Male</option>
            <option value="Female" selected="@(Model.Pet.Gender == "Female" ? "selected" : "")">Female</option>
        </select>
        <span asp-validation-for="Pet.Gender" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Pet.OwnerID" class="control-label"></label>
        <select asp-for="Pet.OwnerID" class="form-control" asp-items="Model.Owners">
            <option value="">-- Select Owner --</option>
        </select>
        <span asp-validation-for="Pet.OwnerID" class="text-danger"></span>
    </div>

    <input type="submit" value="Save" class="btn btn-primary" />
</form>

<a asp-page="./Index">Back to List</a>

}
