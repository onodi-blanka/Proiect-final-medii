@page
@model Proiect.Pages.Pets.DetailsModel

<h2>Details of Pet</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Pet.Name
        </dd>
        <dt class="col-sm-2">
            Species
        </dt>
        <dd class="col-sm-10">
            @Model.Pet.Species
        </dd>
        <dt class="col-sm-2">
            Breed
        </dt>
        <dd class="col-sm-10">
            @Model.Pet.Breed
        </dd>
        <dt class="col-sm-2">
            Date of Birth
        </dt>
        <dd class="col-sm-10">
            @Model.Pet.DateOfBirth.ToString("yyyy-MM-dd")
        </dd>
        <dt class="col-sm-2">
            Gender
        </dt>
        <dd class="col-sm-10">
            @Model.Pet.Gender
        </dd>
        <dt class="col-sm-2">
            Owner
        </dt>
        <dd class="col-sm-10">
            @Model.Pet.Owner?.FirstName @Model.Pet.Owner?.LastName
        </dd>
    </dl>
</div>

<a asp-page="./Edit" asp-route-id="@Model.Pet.ID">Edit</a> |
